create database javabook;
use javabook;


select * from recipe;

create table RECIPE(
   INGREDIENTS VARCHAR(1000),
   DIRECTIONS VARCHAR(1000),
   COOKINGTIME VARCHAR(20),
   REVIEW VARCHAR(20),
   RECIPENAME VARCHAR(200)
);

